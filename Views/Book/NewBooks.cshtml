@model List<TheBookCave.Models.ViewModels.BookListViewModel>
<link rel="stylesheet" href="~/css/toptenandnew.css"/>
@{
    ViewData["Title"] = "New Arrivals" ;
}

 <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">@ViewData["Title"]</h1>
          <p class="lead text-muted">Our newst books!</p>
        </div>
</section>

<div class="container">
    <div class="row">
        @foreach(var book in @Model)
        { 		
			<div class="album py-5 bg-light" align-items-center>
				<div class="col-sm">
					<a asp-controller="Book" asp-action="BookDetails" asp-route-isbn="@book.ISBN"><img class="card-img-top" src="@book.Image" alt="Not Found"></a>
                    <h2 class="title">@book.Title</h2>
                    <h5 class="card-author">Author: @book.Author</h5>
                    <h5 class="card-genre">Genre: @book.Genre</h5>
					<h5 class="card-rating">Rating: @book.Rating</h5>
					<h5 class="card-price">Price: @book.Price ISK </h5>
					<div class="btn-group">
						<a asp-controller="Book" asp-action="BookDetails" asp-route-isbn="@book.ISBN"><button type="button" class="btn btn-sm btn-outline-secondary">View</button></a>
						<a asp-controller="#" asp-action="#" asp-route-isbn="#"><button type="button" class="btn btn-sm btn-outline-secondary">Add to cart</button></a>
					</div>
				</div>
			</div>
        }
    </div>
</div>